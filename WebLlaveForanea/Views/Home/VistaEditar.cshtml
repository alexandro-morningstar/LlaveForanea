@model Entidades.E_Videojuegos

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap.js" rel="stylesheet" />
    <link href="~/CSS/AgregarEditarStyles.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/aca4f49d6f.js" crossorigin="anonymous"></script>
    <title>VistaEditar</title>
</head>
<body>
    <header>
        <div id="messages" class="mt-2">
            @if (@TempData["error"] != null)
            {
                <p class="alert alert-danger">@TempData["error"]</p>
            }
        </div>
    </header>
    <main>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 id="add-title" class="mb-3">Ingresa los datos del videojuego</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="mb-3 row align-items-center">
                <div class="col-sm-4">
                    @*@Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-form-label">Nombre:</div>
                </div>
                <div class="col-sm-8">
                    @*@Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input type="text" name="Nombre" value="@Model.Nombre" class="form-control" />
                    @*@Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <div class="col-sm-4">
                    @Html.LabelFor(model => model.ClasificacionId, htmlAttributes: new { @class = "col-form-label" })
                </div>
                <div class="col-sm-8">
                    @*@Html.EditorFor(model => model.ClasificacionId, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownList("ClasificacionId", null, "Seleccionar Clasificacion", new { @class = "form-control" })
                    @*@Html.ValidationMessageFor(model => model.ClasificacionId, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <div class="col-sm-4">
                    @Html.LabelFor(model => model.GeneroId, htmlAttributes: new { @class = "col-form-label" })
                </div>
                <div class="col-sm-8">
                    @*@Html.EditorFor(model => model.GeneroId, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownList("GeneroId", null, "Seleccionar Genero", new { @class = "form-control" })
                    @*@Html.ValidationMessageFor(model => model.GeneroId, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" value="Confirmar" formaction="/Home/EditarPost" class="btn btn-outline-success btn-lg mt-3">Confirmar</button>
                </div>
            </div>
        </div>
        }
    <div>
        <form action="/home/Index" method="post">
            <button class="btn btn-sm btn-outline-light mt-3" type="submit">Regresar</button>
        </form>
    </div>
    </main>
</body>
</html>
