<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/CSS/Reset.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap.js" rel="stylesheet" />
    <link href="~/CSS/AgregarEditarStyles.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/aca4f49d6f.js" crossorigin="anonymous"></script>
    <title>Agregar Videojuego</title>
</head>
<body>
    <header>
        <div id="messages" class="mt-2">
            @if (@TempData["error"] != null)
            {
                <p class="alert alert-danger">@TempData["error"]</p>
            }
        </div>
    </header>
    <main>
        <h2 id="add-title" class="mb-3">Ingresa los datos del videojuego</h2>
        <form action="/Home/AgregarVideojuego" method="post">
            <div class="mb-3 row align-items-center">
                <div class="col-sm-4">
                    <label class="col-form-label" for="Nombre">Nombre:</label>
                </div>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="Nombre" placeholder="Ej: Cry of Fear" required />
                </div>
            </div>
            <div class="mb-3 row align-items-center">
                <div class="col-sm-4">
                    <label class="col-form-label" for="ClasificacionId">Clasificación:</label>
                </div>
                <div class="col-sm-8">
                    @Html.DropDownList("ClasificacionId", null, "Seleccionar Clasificacion", new { @class="form-control" })
                    @*<input class="form-control" type="text" name="ClasificacionId" placeholder="" required />*@
                </div>
            </div>
            <div class="mb-3 row align-item-center">
                <div class="col-sm-4">
                    <label class="col-form-label" for="GeneroId">Genero:</label>
                </div>
                <div class="col-sm-8">
                    @Html.DropDownList("GeneroId", null, "Seleccionar Genero", new { @class = "form-control" }) <!--Se le pasa el nombre del ViewBag definido en el controlador-->
                    @*<input class="form-control" type="text" name="GeneroId" placeholder="" />*@
                </div>
            </div>
            <div>
                <button class="btn btn-outline-success btn-lg mt-3">Agregar Videojuego</button>
            </div>
        </form>
        <form action="/Home/Index" method="post">
            <button class="btn btn-sm btn-outline-light mt-3" type="submit">Registro</button>
        </form>
    </main>
</body>
</html>
